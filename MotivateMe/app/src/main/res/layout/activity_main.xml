<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@color/dark_sea_green"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/main_activity_iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tea_green"
        android:contentDescription="@string/cont_desc"
        app:srcCompat="@drawable/ic_baseline_comment_24" />

    <TextView
        android:id="@+id/main_activity_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/ph_message"
        android:textAlignment="center"
        android:textColor="@color/rich_black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/main_activity_et_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/rich_black"
        android:textColorHint="@color/rich_black"
        android:textSize="24sp"
        android:autofillHints="" />

    <Button
        android:id="@+id/main_activity_bt_update"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tea_green"
        android:text="@string/bt_text"
        android:textColor="@color/rich_black"
        android:textSize="24sp" />
</LinearLayout>